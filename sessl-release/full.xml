<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>full</id>
  <formats>
    <format>zip</format>
  </formats>

  <!-- Include all auxiliary files for release -->
  <!--<fileSets>
    <fileSet>
      <directory>${path.release.files}</directory>
      <outputDirectory>bin</outputDirectory>
    </fileSet>
  </fileSets>-->

  <!-- Include all required libraries and all generated JAR files -->
  <dependencySets>

    <dependencySet>
      <outputDirectory>libs</outputDirectory>
      <excludes>
        <exclude>org.sessl:*</exclude>
      </excludes>
    </dependencySet>

    <dependencySet>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>org.sessl:*:jar</include>
      </includes>
      <excludes>
        <exclude>org.sessl:*:jar:sources</exclude>
        <exclude>org.sessl:*:jar:tests</exclude>
        <exclude>org.sessl:*:jar:test-sources</exclude>
      </excludes>
    </dependencySet>

    <dependencySet>
      <outputDirectory>src</outputDirectory>
      <includes>
        <include>org.sessl:*:jar:sources</include>
      </includes>
    </dependencySet>

    <dependencySet>
      <outputDirectory>test</outputDirectory>
      <includes>
        <include>org.sessl:*:jar:tests</include>
        <include>org.sessl:*:jar:test-sources</include>
      </includes>
    </dependencySet>

  </dependencySets>
</assembly>